{
  // === OUTPUT: YOUR PACKED CODE ===
  "output": {
    "filePath": "my-vite-bun-react-output.txt", // OBVIOUS: Custom name for YOUR project
    "style": "markdown", // BETTER: Markdown for readability + AI parsing
    "headerText": "=== VITE + TYPESCRIPT + BUN + REACT + TAILWIND PROJECT ===", // OBVIOUS: Screams your stack
    "fileSummary": true, // Shows what’s packed
    "directoryStructure": true, // Maps your layout
    "removeComments": false, // Keeps context for AI
    "removeEmptyLines": false, // Preserves structure
    "showLineNumbers": true, // OBVIOUS: Line numbers for easy reference
    "includeEmptyDirectories": false // Skips useless folders
  },
  // === INCLUDE: YOUR CORE FILES ===
  "include": [
    "src/**/*.{ts,tsx}", // React components + TS logic
    "vite.config.ts", // Vite’s heart
    "tsconfig.json", // TypeScript rules
    "tailwind.config.js", // Tailwind setup
    "src/index.css", // Tailwind CSS entry
    "public/index.html", // Vite’s HTML root
    "package.json" // Bun’s dependency list
  ],
  // === IGNORE: YOUR JUNK ===
  "ignore": {
    "useGitignore": true, // Respects your .gitignore
    "useDefaultPatterns": true, // Skips node_modules, etc.
    "customPatterns": [
      "dist/**", // Vite’s build output
      "bun.lockb", // Bun’s lockfile
      "*.log", // Logs
      "*.test.{ts,tsx}" // Skip tests unless you want them
    ]
  },
  // === SAFETY FIRST ===
  "security": {
    "enableSecurityCheck": true // Catches keys or secrets
  },
  // === AI-READY ===
  "tokenCount": {
    "encoding": "cl100k_base" // Matches me (Grok) + common LLMs
  }
}